/* pages/chat/websocket/index.wxss */
page{
  margin: 0;
  padding: 0;
}
.show-area{
  padding: 0 10rpx;
  font-size: 29rpx;
}
.detail-bottom {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 90rpx;
  background-color: white;
  box-shadow: 0px 0rpx 5px 0px rgba(165, 165, 165, 0.39);
}

.detail-bottom .focusinput {
  height: 60rpx;
  margin-left: 20rpx;
  border: 1rpx solid #f2f2f2;
  margin-top: 15rpx;
  width: 68%;
  border-radius: 15rpx;
  float: left;
  padding-left: 10rpx;
  font-size: 30rpx;
}

.bottom-btn {
  position: relative;
  top: -0rpx;
  right: 10rpx;
  width: 180rpx;
  height: 70rpx;
  margin-top: 13rpx;
  float: right;
  line-height: 70rpx;
  font-size: 28rpx;
}

.left-area {
  margin: 35rpx 25rpx;
}
.right-area {
  margin: 35rpx 25rpx;
  text-align: right;
}

.box {
  position: relative;
  display: inline-block;
  max-width: 200px;
  padding: 4px 10px;
  background-color: #ccc;
  line-height: 18px;
  font-size: 29rpx;
  border-radius: 10rpx;
  word-break: break-all;
  overflow-wrap: break-word;
}

.u-tri::before {
  position: absolute;
  left: -20px;
  top: 4px;
  content: '';
  border-top: 4px solid transparent;
  border-bottom: 4px solid transparent;
  border-left: 12px solid transparent;
  border-right: 10px solid #ccc;
}
.r-u-tri::before {
  position: absolute;
  right: -20px;
  top: 4px;
  content: '';
  border-top: 4px solid transparent;
  border-bottom: 4px solid transparent;
  border-left: 10px solid rgb(133, 203, 226);
  border-right: 12px solid transparent;
}

.r-box {
  position: relative;
  display: inline-block;
  max-width: 200px;
  padding: 4px 10px;
  background: linear-gradient(90deg, lightblue, rgb(133, 203, 226));
  line-height: 18px;
  font-size: 29rpx;
  border-radius: 10rpx;
  word-break: break-all;
  overflow-wrap: break-word;
}

.r-head_area{
  width: 95rpx;
  height: 95rpx;
  float: right;
  margin-left: 30rpx
}

.name-area{
  font-size: 30rpx;
}

.head_area{
  width: 95rpx;
  height: 95rpx;
  float: left;
  margin-right: 30rpx;
}