    <text class="confirm-modal-text-content">{{order.express_detail_starttime}}-{{order.express_detail_endtime}}</text>
  </view>
  <view class="confirm-modal-text-line">
    <text class="confirm-modal-text-head">{{}}</text>
    <text class="confirm-modal-text-content">{{order.sex}}</text>
    <text class="confirm-modal-text-content">{{order.contact_building}}</text>
  </view>
  <view class="confirm-modal-text-line">
    <text class="confirm-modal-bold-text">{{}}</text>
  </view>
  <view class="confirm-modal-text-line">
    <text class="confirm-modal-bold-text">{{}}</text>
  </view>
  <view class="confirm-modal-text-line">
    <text class="confirm-modal-text">{{}}</text>
  </view>
  <view class="confirm-modal-text-line">
    <text class="confirm-modal-text">{{}}</text>
  </view>
</modal>




