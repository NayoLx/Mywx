/* pages/order/list/index.wxss */
.swiper-tab {
  width: 100%;
  text-align: center;
  line-height: 36px;
  border-bottom: 1rpx solid #e2e2e2; 
}

.swiper-tab-list {
  font-size: 30rpx;
  display: inline-block;
  width: 33%;
  color: #7a7a7a;
}

.on {
  color: #000004;
  border-bottom: 8rpx solid lightblue;
}

.swiper-box {
  display: block;
  min-height: 100%;
  height: 1800rpx;
  width: 100%;
  background-color: white;
}

page {
  height: 100%;
}

.no-data-item {
  width: 100%;
  height: 130rpx;
  text-align: center;
}

.no-data-item .no-data-text {
  border-bottom: none;
  line-height: 130rpx;
  color: #666;
  font-size: 24rpx;
}

.item-wrapper {
  width: 100%;
  overflow: hidden;
}

.item-list {
  position: relative;
  width: 100%;
  height: 150rpx;
  margin-bottom: 20rpx;
  border: 1rpx solid #ccc;
}

.item-info, .item-oper {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
}

.item-info {
  display: flex;
  padding: 20rpx 20rpx 20rpx 0;
  z-index: 2;
  background: white;
  transition: left 0.2s ease-in-out;
}

.item-list:first-child {
  margin-top: 20rpx;
  border-top: 1px solid #ccc;
}

.item-oper {
  
  display: flex;
  justify-content: flex-end;
}

.oper-delete {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 150rpx;
  z-index: 1;
  color: white;
  background: red;
}

.info-img {
  width: 100rpx;
  height: 125rpx;
  margin-top: -10rpx;
  margin-right: -10rpx;
  background-color: rgb(255, 255, 255, 0)
}

.info-wrapper {
  margin-left: 20rpx;
  width: 588rpx;
}

.info-desc {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-top: 6rpx;
}

.info-desc .name {
  font-size: 32rpx;
  color: black;
  font-weight: 600;
}

.info-desc .time {
  font-size: 24rpx;
  color: #999;
}

.info-content {
  font-size: 28rpx;
  color: #999;
  margin-top: 4rpx;
}

