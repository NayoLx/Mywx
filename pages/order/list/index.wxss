/* pages/order/list/index.wxss */

.swiper-tab {
  width: 100%;
  text-align: center;
  line-height: 36px;
  border-bottom: 1rpx solid #e2e2e2;
}

.swiper-tab-list {
  font-size: 30rpx;
  display: inline-block;
  width: 50%;
  color: #7a7a7a;
}

.on {
  color: #000004;
  border-bottom: 8rpx solid lightblue;
}

.swiper-box {
  display: block;
  min-height: 100%;
  height: 1800rpx;
  width: 100%;
  background-color: white;
}

page {
  height: 100%;
}

.no-data-item {
  width: 100%;
  height: 130rpx;
  text-align: center;
}

.no-data-item .no-data-text {
  border-bottom: none;
  line-height: 130rpx;
  color: #666;
  font-size: 24rpx;
}

.item-wrapper {
  width: 100%;
  overflow: hidden;
}

.item-list {
  position: relative;
  width: 94%;
  margin-left: 3%;
  height: 180rpx;
  margin-bottom: 20rpx;
  
}

.item-info, .item-oper {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
}

.item-info {
  border-radius: 20rpx;
  display: flex;
  padding: 20rpx 20rpx 20rpx 0;
  z-index: 2;
  background: white;
  transition: left 0.2s ease-in-out;
   box-shadow: 3px 10rpx 20rpx 0px rgba(165, 165, 165, 0.39);
}

.item-list:first-child {
  margin-top: 20rpx;
}

.item-oper {
  display: flex;
  justify-content: flex-end;
}

.oper-delete {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 150rpx;
  z-index: 1;
  color: white;
  background: red;
}

.info-img {
  width: 100rpx;
  height: 125rpx;
  margin-top: -10rpx;
  margin-right: -10rpx;
  background-color: rgb(255, 255, 255, 0);
}

.info-labal{
  width: 50rpx;
  height: 100rpx;
  position: relative;
  top: -10rpx;
  left: 10rpx;
}

.info-wrapper {
  margin-left: 20rpx;
  width: 100%;
}

.info-desc {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-top: 6rpx;
  margin-bottom: 10rpx;
  border-bottom: 1rpx solid #e2e2e2;
  padding-bottom: 10rpx;
}

.info-desc .name {
  font-size: 32rpx;
  color: black;
  font-weight: 600;
  margin-left: 50rpx;
}

.info-desc .time {
  font-size: 24rpx;
  color: #999;
}

.info-content {
  font-size: 28rpx;
  color: #999;
  margin-top: 4rpx;
  margin-left: 50rpx;
}

.close {
  width: 30rpx;
  height: 30rpx;
  float: left;
  position: relative;
  right: 35rpx;
  top: 15rpx;
}

.confirm-modal-text-line {
  display: flex;
  display: -webkit-flex;
  flex-direction: row;
}

.confirm-modal-text-head {
  font-size: 30rpx;
  color: #333;
  font-weight: bold;
  width: 28%;
}

.confirm-modal-text-content {
  font-size: 30rpx;
  color: #333;
  width: 72%;
}

.confirm-modal-text {
  font-size: 30rpx;
  color: #333;
}

.confirm-modal-bold-text {
  font-size: 30rpx;
  color: #333;
  font-weight: bold;
}

.mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  z-index: 9000;
  opacity: 0.7;
}

.form {
  width: 550rpx;
  height: 520rpx;
  position: fixed;
  top: 22%;
  z-index: 9999;
  margin: 0rpx 100rpx 185rpx 100rpx;
  background-color: #fff;
  border-radius: 36rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
