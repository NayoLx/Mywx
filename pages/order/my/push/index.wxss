/* pages/order/my/push/index.wxss */

/*滚动容器*/

page {
  line-height: 1.6;
  font-family: -apple-system-font, "Helvetica Neue", sans-serif;
}

.scroll-main {
  height: 100%;
  display: flex;
  flex-direction: column;
}

.item-picker {
  width: 100%;
  margin: 20rpx 40rpx 15rpx 30rpx;
  font-size: 32rpx;
}

button {
  display: none;
}

.item_sex_input {
  border-bottom: 1rpx solid #b5b5b5;
  width: 90%;
  margin: 20rpx;
}

.item-sex {
  width: 100%;
  margin: 20rpx 10rpx;
  height: 180rpx;
}

.item-detail {
  width: 100%;
  margin: 20rpx 10rpx;
  height: 300rpx;
}

.item-detail textarea {
  border: 1rpx solid #b5b5b5;
  height: 300rpx;
}

.tag-item {
  width: 120rpx;
  height: 60rpx;
  line-height: 15rpx;
  text-align: center;
  font-size: 26rpx;
  background: white;
  border: 2rpx solid #b5b5b5;
  border-radius: 30rpx;
  margin: 20rpx 15rpx 0rpx 15rpx;
  padding: 20rpx;
  display: inline-block;
}

/*高亮样式*/

.tag-item-highlight {
  width: 120rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  font-size: 26rpx;
  background: lightblue;
  border: 2rpx solid lightblue;
  border-radius: 30rpx;
  margin: 20rpx 15rpx 0rpx 15rpx;
  padding: 10rpx;
  display: inline-block;
}

/*提交按钮*/

.submit-btn-section {
  position: fixed;
  right: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  width: 100%;
  height: 160rpx;
  margin-top: 20rpx;
  text-align: center;
  background-color: #fff;
}

.submit-btn {
  width: 60%;
  padding: 20rpx 0;
  background: linear-gradient(90deg, lightblue, rgb(133, 203, 226));
  box-shadow: 0px 14rpx 42px 0px rgba(165, 165, 165, 0.39);
  color: #333;
  font-size: 32rpx;
  border-radius: 80rpx;
  margin: 20rpx 30rpx;
  margin-left: 20%;
}

.submit-btn-disable {
  width: 60%;
  padding: 20rpx 0;
  background: #cacbcd;
  color: #333;
  font-size: 32rpx;
  border-radius: 80rpx;
  margin: 20rpx 30rpx;
  margin-left: 20%;
}

.uploadImage {
  width: 100%;
  margin: 20rpx 30rpx;
  height: 200rpx;
}

.uploadImage text {
  width: 100%;
  float: left;
  font-size: 31rpx;
  font-weight: 500;
}

.uploadImage .tet {
  color: #b1aaaa;
  padding-top: 5rpx;
  width: 79%;
  font-size: 29rpx;
  font-weight: 500;
  float: right;
}

.uploadImage .imag {
  margin: 15rpx 15rpx 15rpx 0;
  width: 110rpx;
  height: 110rpx;
  margin-top: 30rpx;
  float: left;
}

.close {
  width: 30rpx;
  height: 30rpx;
  float: left;
  position: relative;
  right: 35rpx;
  top: 15rpx;
}
