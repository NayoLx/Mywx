/* pages/order/my/text_detail/detail/index.wxss */

.detail-head {
  height: 100rpx;
  width: 100%;
}

.detail-head-icon {
  width: 90rpx;
  height: 90rpx;
  border-radius: 88rpx;
  margin-left: 20rpx;
  float: left;
}
/* title */
.detail-title {
  width: 90%;
  height: 100rpx;
  margin-left: 5%;
  padding: 0rpx 10rpx;
}

.detail-title text {
  text-align: left;
  display: block;
  margin-left: 25rpx;
}

.img_label{
  margin: 2rpx;
}

.penson {
  font-size: 30rpx;
  float: left;
  line-height: 50rpx;
  margin-left: 20rpx;
}

.penson-time {
  font-size: 27rpx;
  color: #999;
}

.detail-bottom {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 90rpx;
  background-color: white;
   box-shadow: 0px 0rpx 5px 0px rgba(165, 165, 165, 0.39);
}

.detail-bottom .focusinput {
  height: 60rpx;
  margin-left: 15rpx;
  border: 1rpx solid #f2f2f2;
  background-color: #f2f2f2;
  margin-top: 15rpx;
  width: 68%;
  border-radius: 33rpx;
  float: left;
}

.detail-bottom .focusinput2 {
  height: 60rpx;
  margin-left: 15rpx;
  border: 1rpx solid #f2f2f2;
  background-color: #f2f2f2;
  margin-top: 15rpx;
  width: 78%;
  border-radius: 33rpx;
  float: left;
}

.detail-icon{
  width: 75rpx;
  height: 75rpx;
  float: left;
  margin-top: 9rpx;
  margin-left: 20rpx;
}

.item-before-text-second {
  position: relative;
  top: 0;
  left: -25rpx;
  font-size: 22rpx;
  color: #fff;
  background-color: red;
  border-radius: 33rpx;
  width: 20rpx;
  height: 30rpx;
  padding: 0rpx 8rpx;
  margin-bottom: 10rpx;
  line-height: 30rpx;
}

.bottom-btn{
   position: relative;
  top: -0rpx;
  right: 10rpx;
  width: 180rpx;
  height: 70rpx;
  margin-top: 13rpx;
  float: right;
  line-height: 70rpx;
  font-size: 28rpx;
  
}

.detail-content{
  width: 94%;
  font-size: 31rpx;
  margin: 40rpx 0 0 3%;
  line-height: 60rpx;
  margin-bottom: 100rpx;
}

.content_img{
  width: 95%;
  margin: 30rpx 0 0 2.5%;
}

/* heart */
.heart {
  width: 80px;
  height: 80px;
  background: url("https://cssanimation.rocks/images/posts/steps/heart.png") no-repeat;
  background-position: 0 0;
  cursor: pointer;
  transition: background-position 1s steps(28);
  transition-duration: 0s;
  float: right;
  margin-top:-60rpx;
  margin-right:10rpx;

}

.is-active {
  transition-duration: 1s;
  background-position: -2800px 0;
}

.placement {
  position: fixed;
  top: 100%;
  left: 100%;
  transform: translate(-50%, -50%);
}

.pushtime {
  font-size: 25rpx;
  clear: both;
  float: right;
  margin: 10rpx 20rpx 0 0;
  color: #999;
}

.img_label {
  height: 45rpx;
  width: 15rpx;
  position: absolute;
  top: -5rpx;
  left: 40rpx;
}

