<!--pages/map/map.wxml-->
<view style='z-index:-999'>
  <map id="map" longitude="113.49355" latitude="23.4505" scale="19" markers="{{markers}}" bindmarkertap="markertap" show-location style="width: 100%; height: 500px"></map>
</view>

<view class="mask" catchtouchmove="preventTouchMove" wx:if="{{showModal}}"></view>
<view class="modalDlg" wx:if="{{showModal}}">
  
  <view class='useralert_quanyi'>今日份任务</view>
  <view class='fenggexian'></view>
  <block wx:for="{{arrlocal}}">
    <text class='vipinfo'>{{item.classname}}{{item.classroom}}\n{{item.class}}{{item.teacher}}</text>
  </block>
  <view class='shutalert' bindtap="go">
    <image src='../../img/worry.png'></image>
  </view>
</view>

<view class='down'>
  <view class='btn'>
    <text>今天\t{{date}}\t有\t<text>{{todayClass.length }}</text>\t节课程</text>
    <button bindtap='checkclass' animation="{{animationData}}">课程</button>
  </view>
</view>