.item-con {
  width: 100%;
}

.item-icon {
  width: 120rpx;
  height: 120rpx;
  border-radius: 88rpx;
  margin: 0 auto;
  display: block;
}

.item-name {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 10rpx;
}

.item-btn {
  width: 200rpx;
  height: 60rpx;
  border-radius: 88rpx;
  border: 1rpx solid #b5b5b5;
  background-color: #fff;
  font-size: 30rpx;
  line-height: 56rpx;
}

button::after {
  border: none;
}

.item-modal {
  width: 100%;
  margin-top: 30rpx;
}

.item-modal-btn {
  width: 100%;
  height: 70rpx;
  padding: 10rpx 20rpx;
  margin-left: 30rpx;
}

.modalInput {
  font-size: 33rpx;
  color: #000;
  padding: 20rpx;
}

.modalInput button {
  width: 40%;
  float: right;
  font-size: 28rpx;
  margin-top: -20rpx;
  border: 1rpx solid #b5b5b5;
}
